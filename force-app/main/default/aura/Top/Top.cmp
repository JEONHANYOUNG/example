<aura:component implements="forceCommunity:availableForAllPageTypes" access="global">
    <aura:attribute name="search" type="String" default=""/>

    <div class="slds-border_top" style="text-align: center; font-size: 60px; color: black; margin: 10px;">Salesforce Company</div>
    <div>
        <div class="slds-p-left_xx-large slds-p-right_xx-large" style="display: flex; width: 100%; height: 10vh; flex: 0 0 auto; align-items: center; text-align: center; ">
            <div style="width: 15%; font-size: 1rem; font-weight: bolder;"> Main Menu </div>
            <input type="text" onchange="{!c.onchangeinput}" id="combobox-id-1" aria-autocomplete="list" aria-controls="listbox-id-1" aria-expanded="false" aria-haspopup="listbox" autoComplete="off" role="combobox" placeholder="Search..." style="font-size: x-large; border-radius: 10px; color: grey; margin-left: 10px;" />
            <button onclick="{!c.search}" >클릭</button>
        </div>
    </div>
</aura:component>	
 